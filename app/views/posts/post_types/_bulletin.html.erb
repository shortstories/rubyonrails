<h2><%= params[:bulletin_id] %> <small><%= link_to '설정', edit_bulletin_path(params[:bulletin_id])%></small></h2>
<table class="table">
  <thead>
    <tr>
      <th class="idtab">ID</th>
      <th class="subject">Subject</th>
      <th class="created">Created at</th>
      <th class="updated">Updated at</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="idtab"><%= post.id %></td>        
        <td class="subject"><%= link_to post.title, [post.bulletin, post]%> <small>( <%= post.comments.size %> )</small></td>
        <td class="created"><%= post.created_at %></td>
        <td class="updated"><%= post.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Post', new_bulletin_post_path, class: 'btn btn-default' %>